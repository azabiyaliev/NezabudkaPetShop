generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  firstName  String
  secondName String
  password   String
  phone      String? @unique
  role       Role    @default(client)
  token      String?
  googleID   String? @unique
  facebookID String? @unique

  @@map("users")
}

enum Role {
  client
  admin
}
